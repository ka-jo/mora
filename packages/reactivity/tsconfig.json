{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "paths": {
            "@/*": [ "./src/*"]
        },
        "declaration": true,
        "declarationMap": true,
        "declarationDir": "dist/types",
        "noEmit": true,
        "emitDeclarationOnly": true,
        "types": ["vitest/globals", "node"],
    },
    "include": ["src/**/*.ts", "tests/**/*.ts"],
    "exclude": ["node_modules"]
}