{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2022",                                 
    "module": "ESNext",                                  
    "moduleResolution": "node",                        
    "strict": true,                                      
    "esModuleInterop": true,                            
    "allowSyntheticDefaultImports": true,               
    "resolveJsonModule": true,                          
    "forceConsistentCasingInFileNames": true,            

    /* Emit */
    "declaration": true,                                 
    "declarationMap": true,                              
    "sourceMap": true,                                   

    /* Completeness */
    "skipLibCheck": true,

    "types": ["vitest/globals"]                            
  }
}